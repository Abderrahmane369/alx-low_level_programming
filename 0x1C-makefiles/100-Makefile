CC = gcc
SRC = main.c school.c
OBJ = $(patsubst %.c,%.o,$(SRC))
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
				$(CC) $^ -o $@

main.o: main.c
				$(CC) -Wall -Werror -Wextra -pedantic -c $< -o $@

school.o: school.c
				$(CC) -Wall -Werror -Wextra -pedantic -C $< -o $@

clean:
				$(RM) $(NAME) *~ #*# *.swp

fclean: clean
				$(RM) $(OBJ)

re: fclean all

